<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Camera2ViewLayout -->
    <declare-styleable name="Camera2ViewLayout">
        <attr name="cameraCoverBackgroundColor" format="color" />
        <attr name="showToast" format="boolean" />
        <attr name="showLog" format="boolean" />
        <attr name="cameraFacing" format="enum">
            <enum name="front" value="0" />
            <enum name="back" value="1" />
        </attr>
    </declare-styleable>

</resources>
