<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">125dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">@android:color/transparent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/not_show_bg</item>
    </style>

    <style name="MyInfoTabLayoutStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ConnectionTabLayoutStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!--MyTabLayout默认的图片指示线Style-->
    <style name="tabIndicatorDrawableStyle">
        <item name="myTabIndicatorWidth">14dp</item>
        <item name="myTabIndicatorDrawable">@drawable/tab_indicator</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!--抢购倒计时view默认style-->
    <style name="CountdownTimerViewTimeTextStyle">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/bg_timer_countdown</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CountdownTimerViewColonTextStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#474747</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">:</item>
    </style>

    <declare-styleable name="CountDownTimerView">
        <attr name="timer_textSize" format="dimension" />
    </declare-styleable>

    <!-- 底部弹出popupwindow 动画 -->
    <style name="BottomPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_popup_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_popup_out_anim</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <!--更新app对话框-->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TitleBar -->
    <declare-styleable name="TitleBar">
        <attr name="title" format="string" />
        <attr name="show_h_line" format="boolean" />
    </declare-styleable>

</resources>
