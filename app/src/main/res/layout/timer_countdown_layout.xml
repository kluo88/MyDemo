<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--时 十位-->
    <TextView
        android:id="@+id/tv_hour_decade"
        style="@style/CountdownTimerViewTimeTextStyle"
        tools:text="0" />
    <!--时 个位-->
    <TextView
        android:id="@+id/tv_hour_unit"
        style="@style/CountdownTimerViewTimeTextStyle"
        android:layout_marginStart="2dp"
        tools:text="0" />
    <!--冒号-->
    <TextView
        android:id="@+id/colon_hour"
        style="@style/CountdownTimerViewColonTextStyle" />


    <!--分 十位-->
    <TextView
        android:id="@+id/tv_min_decade"
        style="@style/CountdownTimerViewTimeTextStyle"
        tools:text="0" />
    <!--分 个位-->
    <TextView
        android:id="@+id/tv_min_unit"
        style="@style/CountdownTimerViewTimeTextStyle"
        android:layout_marginStart="2dp"
        tools:text="0" />
    <!--冒号-->
    <TextView
        android:id="@+id/colon_minute"
        style="@style/CountdownTimerViewColonTextStyle" />


    <!--秒 十位-->
    <TextView
        android:id="@+id/tv_sec_decade"
        style="@style/CountdownTimerViewTimeTextStyle"
        tools:text="0" />
    <!--秒 个位-->
    <TextView
        android:id="@+id/tv_sec_unit"
        style="@style/CountdownTimerViewTimeTextStyle"
        android:layout_marginStart="2dp"
        tools:text="0" />

</LinearLayout>