<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/title_layout_height"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@id/back_llyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        >

        <ImageView
            android:id="@id/back_iv"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:background="@drawable/icon_return" />

        <TextView
            android:id="@id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="返回"
            android:textColor="#333333"
            android:textSize="@dimen/title_size"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@id/titile_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="#161616"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_view_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/right1_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/title_view_padding"
            android:paddingRight="@dimen/title_view_padding"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <ImageView
            android:id="@id/right2_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/title_view_padding"
            android:paddingRight="@dimen/title_view_padding"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/title_view_padding"
            android:paddingRight="@dimen/title_view_padding"
            android:text="文字内容"
            android:textColor="@color/title_bar_right_text_color_able"
            android:textSize="@dimen/title_size"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/title_h_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#f4f4f4"
        android:visibility="gone" />


</RelativeLayout>