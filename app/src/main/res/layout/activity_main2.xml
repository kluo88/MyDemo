<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/test_protected_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Protected Action"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_adb_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Adb Forward (Server)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_rx_permission_in_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use RxPermission in Activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_rx_permission_in_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use RxPermission in Fragment"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/check_strings_in_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Strings in Apps"
        android:textAllCaps="false" />
</LinearLayout>
